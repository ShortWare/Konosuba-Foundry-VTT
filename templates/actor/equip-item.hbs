<div>
  <h2>Equip {{item.name}}</h2>
  <ul>
    {{#each slots as |slot|}}
      <li class="slot-choice {{#if (eq ../selectedSlot slot.key)}}selected{{/if}}" data-slot="{{slot.key}}">
        <strong>{{slot.label}}</strong>
        {{#if slot.currentItem}}
          - Equipped: {{slot.currentItem.name}}
          <button class="unequip-slot" data-slot="{{slot.key}}">Unequip</button>
        {{else}}
          - Empty
        {{/if}}
      </li>
    {{/each}}
  </ul>

  <button class="equip-item" {{#unless selectedSlot}}disabled{{/unless}}>
    Equip to Selected Slot
  </button>
</div>