<table>
    <tr>
        <th></th>
        <th>Base Score</th>
        <th>Ability Bonus</th>
        <th>Class Mod</th>
        <th>Skills, etc.</th>
        <th>Ability Score</th>
        <th>Skills, etc.</th>
        <th>Dice</th>
        <th style="padding-left: 50px;"></th>
    </tr>
    {{#each system.abilities as |ability key|}}
    <tr>
        <th>{{key}}</th>
        <th><input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}" data-dtype="Number"/></th>
        <th>{{ability.bonus}}</th>
        <th>{{ability.class}}</th>
        <th>{{ability.skills}}</th>
        <th>{{ability.score}}</th>
        <th>{{ability.skillsDice}}</th>
        <th>{{ability.dice}}d6+{{ability.score}}</th>
        <th class="roll-dice" data-roll-title="Nazwa" data-roll="{{ability.dice}}d6+{{ability.score}}">Roll</th>
    </tr>
    {{/each}}
</table>