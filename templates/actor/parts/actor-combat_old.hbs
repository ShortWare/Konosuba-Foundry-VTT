<table>
    <tr>
        <th>Hit Check</th>
        <th>{{combat.hitCheck.dice}}d6+{{combat.hitCheck.flat}}</th>
        <th class="roll-dice" data-roll-title="Hit Check" data-roll="{{combat.hitCheck.dice}}d6+{{combat.hitCheck.flat}}">Roll</th>
    </tr>
    <tr>
        <th>Attack Power</th>
        <th>{{combat.attackPower.dice}}d6+{{combat.attackPower.flat}}</th>
        <th class="roll-dice" data-roll-title="Attack Power" data-roll="{{combat.attackPower.dice}}d6+{{combat.attackPower.flat}}">Roll</th>
    </tr>
    <tr>
        <th>Dodge Check</th>
        <th>{{combat.dodgeCheck.dice}}d6+{{combat.dodgeCheck.flat}}</th>
        <th class="roll-dice" data-roll-title="Dodge Check" data-roll="{{combat.dodgeCheck.dice}}d6+{{combat.dodgeCheck.flat}}">Roll</th>
    </tr>
    <tr>
        <th>Physical Defense</th>
        <th>{{combat.combatAttributes.physicalDefense}}</th>
        <th></th>
    </tr>
    <tr>
        <th>Magic Defense</th>
        <th>{{combat.combatAttributes.magicDefense}}</th>
        <th></th>
    </tr>
    <tr>
        <th>Action Points</th>
        <th>{{combat.combatAttributes.actionPoints}}</th>
        <th></th>
    </tr>
    <tr>
        <th>Movement</th>
        <th>{{combat.combatAttributes.movement}}</th>
        <th></th>
    </tr>
</table>