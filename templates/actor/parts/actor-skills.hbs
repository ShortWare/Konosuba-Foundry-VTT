<ul>
  {{#each skills as |item id|}}
      <li class='' data-item-id='{{item._id}}'>
        <label>
          <h4>{{item.name}}</h4>
        </label>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Edit" type='spell'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='spell'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
        <br>
        <p>Level: {{item.system.level.value}} / {{item.system.level.max}}</p>
        <p>Timing: {{item.system.timing}}</p>
        <p>Target: {{item.system.target}}</p>
        <p>Range: {{item.system.range}}</p>
        <p>Cost: {{item.system.cost}}</p>
        <p>Effects:</p>
        <p>
          {{item.system.effects}}
        </p>
        <button>{{item.system.check}}</button>
        <p>Custom Rolls:</p>
        <p>
          {{#each item.system.customRolls as |roll|}}
            <button class="roll-dice" data-roll-title="{{roll.name}}" data-roll="{{roll.check}}" data-custom-id="{{roll.customId}}">{{roll.name}}</button>
          {{/each}}
        </p>
        <hr />
      </li>
    {{/each}}
</ul>